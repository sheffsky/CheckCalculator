<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.sheffsky.calculator">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Material">
        <activity
            android:name="ru.sheffsky.calculator.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.sheffsky.calculator.AddItemActivity"
            android:label="@string/title_activity_add_item"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="ru.sheffsky.calculator.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="ru.sheffsky.calculator.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.sheffsky.calculator.MainActivity" />
        </activity>
    </application>

</manifest>
